<section class="dashboard">
    <section id='create-post-el'>
        <div>
            {{#if post.id }}
                <h2>Update Post</h2>
            {{else }}
                <h2>Create a New Blog Post</h2>
            {{/if}}
        </div>
        <form class="create-post-form">
            <input type="hidden" name="post-id" value="{{post.id}}">
            <div>
                <label for="post-title">Post Title:</label>
                <input type="text" name='post-title' id="post-title" value="{{post.title}}">
            </div>
            <div>
                <label for="post-body">Post Content:</label>
                <textarea name='post-body' id="post-content" rows='10' cols='100'>{{post.post_body}}</textarea>
            </div>
            <div>
                <button id='create-blog-btn' class='create-btn'>Create Your Post!</button>
            </div>
        </form>
    </section>
</section>




<script src='/javascript/new-post.js'></script>